{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "modules/*": [ "src/*" ],
      "config/*": [ "src/config/*" ],
      "entities/*": [ "src/database/entities/*.entity{.ts,.js}" ],
      "auth/*": [ "src/auth/*" ]
   }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/database/migration/*.ts"
  ]
}
